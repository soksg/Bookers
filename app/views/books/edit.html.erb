<h1>Editing Book</h1>

    <% if @book.errors.any? %>
      <div id="error" >
       <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
         <ul>
            <% @book.errors.full_messages.each do |message| %>
             <li><%= message %></li>
            <% end %>
         </ul>
      </div>
    <% end %>

 <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>

  <div class="field">
    <div>Title</div>
    <%= f.text_field :title %>
  </div>

  <div class="field">
     <div>Body</div>
     <%= f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit' Update Book ' %>
  </div>

 <% end %>


 <span><%= link_to 'Show', book_path(@book.id) %></span>
