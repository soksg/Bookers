<h1>Books</h1>
  <thead>
    <tr>
      <th>title</th>
      <th>body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <% @books.each do |book| %>
  <tbody>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to 'Show', book_path(book.id)  %></td>
      <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
      <td><%= link_to 'Destroy', book_path(book.id) %></td>
    </tr>
  <% end %>
  </tbody>

  <h2>New book</h2>
  <%= form_with model :@book, url: book_path(book.id), method: :post do |f| %>

    <label for="book_title">Title</label>
    <%= f.text_field :title %>

    <label for="book_body">Body</label>
    <%= f.text_area :body %>

    <%= f.submit'Create Book' %>

  <% end %>